<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :category %>
  <%= f.collection_select(:category_id, @categories.order(:title), :id, :title, options = {:prompt => "Select a Category"}) %>

  <%= f.submit %>
<% end %>
<br>
